<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"  >
        <shape android:shape="rectangle"
            >
            <corners android:topLeftRadius="5dip" android:topRightRadius="0dip" android:bottomLeftRadius="5.0dip" android:bottomRightRadius="0dip" />
            <solid android:color="@color/colorPrimary"/>
            <stroke android:width="1.0dip" android:color="@color/colorPrimary" />
            <padding android:top="5dp" android:bottom="5dp"/>
        </shape>

    </item>
    <item android:state_checked="false"  >
        <shape android:shape="rectangle"
            >
            <corners android:topLeftRadius="5dip" android:topRightRadius="0dip" android:bottomLeftRadius="5.0dip" android:bottomRightRadius="0dip" />
            <solid android:color="@android:color/white"/>
            <stroke android:width="1.0dip" android:color="@color/colorPrimary" />
            <padding android:top="5dp" android:bottom="5dp"/>
        </shape>

    </item>
</selector>
