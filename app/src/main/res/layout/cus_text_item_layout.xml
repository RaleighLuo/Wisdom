<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dip"
    android:id="@+id/cus_text_item_layout_ll_root"
    android:background="@drawable/common_item_click_selector"
    >
    <TextView
        android:id="@+id/cus_text_item_layout_tv_title"
        android:text="Title"
        android:textColor="@color/common_text_color"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/cus_text_item_layout_tv_content"
        android:text="Content"
        android:textColor="@color/common_dark_gray_text_color"
        android:textSize="10sp"
        android:layout_marginTop="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>