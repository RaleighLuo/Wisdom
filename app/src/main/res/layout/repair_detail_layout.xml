<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <com.starlight.mobile.android.lib.view.CusHeadView
        android:id="@+id/repair_detail_layout_ch_head"
        style="@style/common_head_style"
        mAttr:chHead_leftImg="@mipmap/ic_back"
        mAttr:chHead_title="@string/repair_detail"
        mAttr:chHead_title_padding_left="0dip" />
    <View style="@style/common_line_style"
        android:layout_below="@+id/repair_detail_layout_ch_head"
        android:id="@+id/repair_detail_v_head"
        />
    <TextView
        android:id="@+id/repair_detail_layout_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设备设施"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:textColor="@color/common_text_color"
        android:textSize="22sp"
        android:layout_below="@+id/repair_detail_v_head"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/repair_detail_layout_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="2017年7月10日 12:30"
        android:layout_alignLeft="@+id/repair_detail_layout_tv_title"
        android:textColor="@color/common_text_color"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/repair_detail_layout_tv_title"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        mAttr:cardElevation="5dp"
        mAttr:contentPadding="20dp"
        android:layout_alignRight="@+id/repair_detail_layout_tv_title"
        android:layout_alignLeft="@+id/repair_detail_layout_tv_title"
        android:layout_marginTop="30dip"
        android:layout_below="@+id/repair_detail_layout_tv_date"
        android:layout_above="@+id/repair_detail_layout_btn_view_progress"
        android:layout_marginBottom="-25dip"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/repair_detail_layout_view_page"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <com.gkzxhn.wisdom.customview.PageControlView
                android:id="@+id/repair_detail_layout_cv_page"
                android:layout_width="match_parent"
                android:layout_marginTop="15dip"
                android:gravity="center"
                android:layout_height="10dip"/>
            <TextView
                android:id="@+id/repair_detail_layout_tv_content"
                android:layout_width="match_parent"
                android:layout_marginTop="15dip"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:textColor="@color/common_text_color"
                android:gravity="center_horizontal"
                android:minLines="4"
                android:textSize="12sp"
                android:text="电梯停在某层一直不下来"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/repair_detail_layout_iv_view_progress"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dip"
        android:layout_centerHorizontal="true"
        android:layout_width="82dip"
        android:layout_height="82dip"
        android:src="@drawable/grey_oval_shape"
        android:padding="10dip"
        android:background="@drawable/black_oval_shape"
        />
    <Button
        android:id="@+id/repair_detail_layout_btn_view_progress"
        android:text="@string/view_progress"
        android:layout_width="wrap_content"
        android:onClick="onClickListener"
        android:clickable="true"
        android:background="@null"
        android:layout_alignLeft="@+id/repair_detail_layout_iv_view_progress"
        android:layout_alignRight="@+id/repair_detail_layout_iv_view_progress"
        android:layout_alignTop="@+id/repair_detail_layout_iv_view_progress"
        android:layout_alignBottom="@+id/repair_detail_layout_iv_view_progress"
        android:gravity="center"
        android:textSize="11sp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>