<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.starlight.mobile.android.lib.view.CusHeadView
        android:id="@+id/repair_detail_ch_head"
        style="@style/common_head_style"
        mAttr:chHead_leftImg="@mipmap/ic_back"
        mAttr:chHead_title="@string/repair_detail"
        mAttr:chHead_title_padding_left="0dip" />
    <View style="@style/common_line_style"
        android:layout_below="@+id/repair_detail_ch_head"
        android:id="@+id/repair_detail_v_head"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/repair_detail_layout_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电梯故障"
                android:textSize="12sp"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/blue_text_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="世嘉国际华城"
                android:id="@+id/repair_detail_tv_commitee"
                android:layout_marginLeft="10dip"
                android:textSize="12sp"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/repair_detail_tv_date"
                android:textColor="@color/common_light_text_color"
                android:layout_toRightOf="@+id/repair_detail_layout_tv_type"
                android:layout_alignTop="@+id/repair_detail_layout_tv_type"
                />
            <TextView
                android:id="@+id/repair_detail_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年10月8日"
                android:textSize="10sp"
                android:layout_marginRight="@dimen/margin"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/repair_detail_layout_tv_type"
                />
            <TextView
                android:id="@+id/repair_detail_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="10dip"
                android:textColor="@color/common_light_text_color"
                android:layout_below="@+id/repair_detail_layout_tv_type"
                android:text="上周雷暴天气，我们这栋楼两个电梯中的一个坏了。下午去物业，他们一开始说里面有东西坏了，东西在寄来的路上，我问，多久能到能修好。回答说不知道。一会又说，东西还在买。那么请问，电梯坏了，问题有没有一个解决的周期，如果没有周期，买不到备件，电梯就一直在那坏着？"
                />
            <LinearLayout
                android:id="@+id/repair_detail_layout_ll_photo"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/repair_detail_tv_content"
                android:layout_marginTop="30dip"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_gravity="right"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/repair_detail_layout_iv_third"
                    android:layout_width="70dip"
                    android:onClick="onClickListener"
                    android:layout_height="70dip"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/small"
                    />
                <ImageView
                    android:id="@+id/repair_detail_layout_iv_second"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:scaleType="centerCrop"
                    android:onClick="onClickListener"
                    android:layout_marginLeft="5dip"
                    android:src="@mipmap/small"
                    />
                <ImageView
                    android:id="@+id/repair_detail_layout_iv_first"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:onClick="onClickListener"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="5dip"
                    android:src="@mipmap/small"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/repair_detail_layout_tv_view_progress"
                android:paddingLeft="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_progress"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin"
                android:textSize="12sp"
                android:onClick="onClickListener"
                android:clickable="true"
                android:background="@drawable/common_item_click_selector"
                android:layout_marginTop="10dip"
                android:paddingBottom="10dip"
                android:textColor="@color/blue_text_color"
                android:paddingTop="10dip"
                android:layout_below="@+id/repair_detail_layout_ll_photo"
                />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>