<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:orientation="vertical" android:layout_width="match_parent"
        mAttr:cardElevation="8dp"
        mAttr:contentPadding="1dp"
        mAttr:cardCornerRadius="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dip"
        android:layout_height="wrap_content">
        <com.gkzxhn.wisdom.customview.RoundCornersImageView
            android:id="@+id/house_sale_item_layout_iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/small"
            mAttr:radiusX="10dip"
            mAttr:radiusY="10dip"
            android:scaleType="centerCrop"
            />

    </android.support.v7.widget.CardView>
</FrameLayout>