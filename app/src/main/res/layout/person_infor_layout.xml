<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.starlight.mobile.android.lib.view.CusHeadView
        android:id="@+id/person_infor_layout_ch_head"
        style="@style/common_head_style"
        mAttr:chHead_leftImg="@mipmap/ic_back"
        mAttr:chHead_title="@string/person_infor"
        mAttr:chHead_title_padding_left="0dip" />
    <View style="@style/common_line_style"/>
    <ImageView
        android:id="@+id/person_infor_layout_iv_portrait"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:layout_marginTop="20dip"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_camera"
        />
    <TextView
        android:id="@+id/person_infor_layout_tv_commity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海文花园8栋1216"
        android:layout_marginTop="10dip"
        android:textColor="@color/common_text_color"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_margin="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="791"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_phone"
        android:textSize="12sp"
        android:textColor="@color/common_hint_text_color"
        android:layout_marginLeft="@dimen/margin"
        />
    <TextView
        android:id="@+id/person_infor_layout_tv_phone"
        android:layout_width="wrap_content"
        android:text="13783832229"
        android:layout_marginTop="@dimen/margin"
        android:textColor="@color/common_text_color"
        android:layout_marginLeft="@dimen/margin"
        android:layout_height="wrap_content"
        />
    <View style="@style/common_line_style"
        android:layout_margin="@dimen/margin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/own_community"
        android:textSize="12sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/common_hint_text_color"
        android:layout_marginLeft="@dimen/margin"
        />
    <TextView
        android:id="@+id/person_infor_layout_tv_community"
        android:layout_width="wrap_content"
        android:text="世纪国际华城"
        android:layout_marginTop="@dimen/margin"
        android:textColor="@color/common_text_color"
        android:layout_marginLeft="@dimen/margin"
        android:layout_height="wrap_content"
        />
    <View style="@style/common_line_style"
        android:layout_margin="@dimen/margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_record"
        android:textSize="12sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/common_hint_text_color"
        android:layout_marginLeft="@dimen/margin"
        />
    <View style="@style/common_line_style"
        android:layout_margin="@dimen/margin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repair_record"
        android:textSize="12sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/common_hint_text_color"
        android:layout_marginLeft="@dimen/margin"
        />
    <View style="@style/common_line_style"
        android:layout_margin="@dimen/margin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_property"
        android:textSize="12sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/common_hint_text_color"
        android:layout_marginLeft="@dimen/margin"
        />
    <View style="@style/common_line_style"
        android:layout_margin="@dimen/margin"
        />
</LinearLayout>