<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/i_topic_comment_replay_layout_root"
    android:background="@color/common_bg_color"
    android:layout_width="match_parent"
    android:padding="10dip"
    android:visibility="gone"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/i_topic_comment_replay_layout_tv_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三：量子卫星提前实现三大科学目标:未来一年将开展多项空间实验"
        android:textSize="11sp"
        android:background="@drawable/common_item_click_selector"
        android:clickable="true"
        android:textColor="@color/common_text_color"
        />
    <TextView
        android:id="@+id/i_topic_comment_replay_layout_tv_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三：量子卫星提前实现三大科学目标:未来一年将开展多项空间实验"
        android:textSize="11sp"
        android:visibility="gone"
        android:clickable="true"
        android:background="@drawable/common_item_click_selector"
        android:layout_marginTop="10dip"
        android:textColor="@color/common_text_color"
        />
    <TextView
        android:id="@+id/i_topic_comment_replay_layout_tv_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三：量子卫星提前实现三大科学目标:未来一年将开展多项空间实验"
        android:textSize="11sp"
        android:visibility="gone"
        android:clickable="true"
        android:background="@drawable/common_item_click_selector"
        android:layout_marginTop="10dip"
        android:textColor="@color/common_text_color"
        />
    <TextView
        android:id="@+id/i_topic_comment_replay_layout_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_replay"
        android:textSize="11sp"
        android:visibility="gone"
        android:background="@drawable/common_item_click_selector"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:textColor="@color/blue_text_color"
        />

</LinearLayout>