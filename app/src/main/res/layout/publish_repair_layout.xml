<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.starlight.mobile.android.lib.view.CusHeadView
        android:id="@+id/notice_layout_ch_head"
        style="@style/common_head_style"
        mAttr:chHead_leftImg="@mipmap/ic_back"
        mAttr:chHead_title="@string/repair"
        mAttr:chHead_title_padding_left="0dip" />
    <View style="@style/common_line_style"/>
    <EditText
        android:id="@+id/publish_repair_layout_et_content"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_marginTop="5dip"
        android:hint="@string/please_describe_question"
        android:gravity="top"
        android:textSize="14sp"
        android:layout_margin="@dimen/margin"
        android:padding="5dip"
        android:textColor="@color/common_text_color"
        android:textColorHint="@color/common_hint_text_color"
        android:background="@drawable/edit_grey_shape"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_gravity="right"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/publish_repair_layout_iv_third"
            android:layout_width="60dip"
            android:visibility="invisible"
            android:onClick="onClickListener"
            android:layout_height="60dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/repair_take_photo"
            />
        <ImageView
            android:id="@+id/publish_repair_layout_iv_second"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:visibility="invisible"
            android:scaleType="centerCrop"
            android:onClick="onClickListener"
            android:layout_marginLeft="5dip"
            android:src="@mipmap/repair_take_photo"
            />
        <ImageView
            android:id="@+id/publish_repair_layout_iv_first"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:onClick="onClickListener"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dip"
            android:src="@mipmap/repair_take_photo"
            />
    </LinearLayout>
    <ScrollView   android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repair_type"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/margin"
                android:textColor="@color/common_light_text_color"
                />
            <TextView
                android:id="@+id/publish_repair_layout_tv_repair_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电梯故障"
                android:clickable="true"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:background="@drawable/common_item_click_selector"
                android:onClick="onClickListener"
                android:textColor="@color/common_text_color"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                />
            <View style="@style/common_line_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/belong_community"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/margin"
                android:textColor="@color/common_light_text_color"
                />
            <TextView
                android:id="@+id/publish_repair_layout_tv_belong_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="国际华城"
                android:clickable="true"
                android:onClick="onClickListener"
                android:textColor="@color/common_text_color"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                />
            <View style="@style/common_line_style"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_detail"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/margin"
                android:textColor="@color/common_light_text_color"
                />
            <TextView
                android:id="@+id/publish_repair_layout_tv_address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="八栋三单元1205"
                android:clickable="true"
                android:onClick="onClickListener"
                android:textColor="@color/common_text_color"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                />
            <View style="@style/common_line_style"
                />
            <View android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/publish_repair_layout_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/commit"
        android:layout_marginTop="10dip"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_marginBottom="@dimen/margin"
        android:layout_weight="0"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:background="@drawable/common_btn_selector"
        />
</LinearLayout>
