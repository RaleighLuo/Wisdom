<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main_abl_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/main_iv_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/home_bg"
                app:layout_collapseMode="parallax" />

            <FrameLayout
                android:id="@+id/main_fl_title"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="bottom|center_horizontal"
                app:layout_collapseMode="parallax">

                <LinearLayout
                    android:id="@+id/main_ll_title_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_marginBottom="60dip"
                    android:layout_marginRight="@dimen/image_start_margin"
                    android:layout_marginLeft="@dimen/image_start_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="@dimen/title_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center"
                        android:text="八栋三单元1205"
                        android:layout_marginLeft="10dip"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dip"
                        android:text="海文花园"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </FrameLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/NestedScrollView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <!--app:behavior_overlapTop="20dp"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_height="match_parent">
            <View android:layout_width="match_parent"
                android:layout_height="370dip"
                android:visibility="gone"
                android:id="@+id/main_layout_ll_title_root"
                />
            <TextView
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="@string/person_intro"/>
        </LinearLayout>

        <!--</android.support.v7.widget.CardView>-->

    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="1dip"
        android:background="@android:color/transparent"
        app:contentInsetStart="0dip"
        app:layout_collapseMode="pin"
        app:layout_anchor="@id/main_fl_title"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">

        <LinearLayout
            android:id="@+id/main_ll_toolbar_root"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@mipmap/home_bg"
                android:paddingTop="70dip"
                android:paddingLeft="@dimen/image_final_margin"
                android:paddingRight="@dimen/image_final_margin"
                android:layout_height="@dimen/toolbar_height"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_tv_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="八栋三单元1205"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/main_layout_tv_t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海文花园"
                    android:layout_below="@+id/main_tv_toolbar_title"
                    android:textStyle="bold"
                    android:layout_marginTop="7dip"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017年6月20号"
                    android:layout_below="@+id/main_layout_tv_t1"
                    android:layout_marginTop="12dip"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期三"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/main_layout_tv_t1"
                    android:layout_marginTop="12dip"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:layout_marginTop="-15dip"
                android:layout_marginRight="40dip"
                app:cardElevation="1dp"
                app:contentPadding="1dp">
                <!--android:background="@drawable/main_header_shape"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="15dip"
                    android:elevation="2dip"
                    android:paddingBottom="15dip"
                    android:gravity="center_vertical"

                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/message"
                        android:background="@null"
                        />
                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/service"
                        android:background="@null"
                        />
                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/appeal"
                        android:background="@null"
                        />
                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/sign"
                        android:background="@null"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="30dip"
                android:layout_gravity="center_horizontal"
                >
                <com.starlight.mobile.android.lib.view.CusTextView
                    style="@style/main_pay_text_style"
                    android:text="@string/pay"
                    android:id="@+id/main_layout_tv_pay"
                    android:drawableTop="@mipmap/pay"
                    android:background="@drawable/main_pay_selector"
                    />
                <com.starlight.mobile.android.lib.view.CusTextView
                    style="@style/main_pay_text_style"
                    android:text="@string/talking"
                    android:id="@+id/main_layout_tv_talking"
                    android:drawableTop="@mipmap/talking"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/main_talking_selector"
                    />
                <com.starlight.mobile.android.lib.view.CusTextView
                    style="@style/main_pay_text_style"
                    android:text="@string/repair"
                    android:id="@+id/main_layout_tv_repair"
                    android:drawableTop="@mipmap/repair"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/main_repair_selector"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_width"
        android:src="@drawable/small"
        app:border_color="@android:color/white"
        app:border_width="2dp"
        android:onClick="onClickListener"
        app:layout_behavior=".AvatarImageBehavior" />

</android.support.design.widget.CoordinatorLayout>
