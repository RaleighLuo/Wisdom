<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_item_click_selector"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/topic_item_layout_iv_portrait"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:src="@mipmap/topic_portrait"
        />
    <ImageView
        android:id="@+id/topic_item_layout_iv_image"
        android:layout_width="52dip"
        android:layout_height="52dip"
        android:visibility="visible"
        android:src="@mipmap/ic_imageloading"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin"
        android:layout_alignTop="@+id/topic_item_layout_tv_name"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YYL666"
        android:textSize="14sp"
        android:textColor="@color/common_text_color"
        android:layout_alignTop="@+id/topic_item_layout_iv_portrait"
        android:layout_toRightOf="@+id/topic_item_layout_iv_portrait"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignLeft="@+id/topic_item_layout_tv_name"
        android:layout_below="@+id/topic_item_layout_tv_name"
        android:textColor="@color/common_hint_text_color"
        android:text="6-19 08:07"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_text_color"
        android:text="求助解决？"
        android:textSize="12sp"
        android:layout_marginTop="7dip"
        android:layout_below="@+id/topic_item_layout_tv_date"
        android:layout_toRightOf="@+id/topic_item_layout_iv_portrait"
         />
    <ImageView
        android:id="@+id/topic_item_layout_iv_comment"
        android:layout_width="19dip"
        android:layout_height="16dip"
        android:src="@drawable/comment_btn_selector"
        android:layout_alignLeft="@+id/topic_item_layout_tv_name"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/topic_item_layout_tv_content"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/topic_item_layout_iv_comment"
        android:text="6"
        android:textSize="12sp"
        android:textColor="@color/common_light_text_color"
        android:layout_marginLeft="5dip"
        android:layout_alignTop="@+id/topic_item_layout_iv_comment"
        />

    <ImageView
        android:id="@+id/topic_item_layout_iv_like"
        android:layout_width="16dip"
        android:layout_height="16dip"
        android:layout_toLeftOf="@+id/topic_item_layout_tv_like"
        android:src="@drawable/like_btn_selector"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/topic_item_layout_tv_content"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:textColor="@color/common_light_text_color"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="@dimen/margin"
        android:layout_alignTop="@+id/topic_item_layout_iv_like"
        />
    <View
        style="@style/common_light_line_style"
        android:layout_marginTop="7dip"
        android:layout_alignLeft="@+id/topic_item_layout_tv_name"
        android:layout_below="@+id/topic_item_layout_tv_like"
        />
</RelativeLayout>