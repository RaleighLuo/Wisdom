<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="common_head_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/black</item>
        <item name="chHead_title_padding_left">@dimen/common_head_leftImgPadding</item>
        <item name="chHead_titleColor">@color/common_text_color</item>
        <item name="chHead_leftImgPadding">15dip</item>
        <item name="chHead_rightImgPadding">15dip</item>
        <item name="chHead_title_size">@dimen/common_head_title_size</item>
        <item name="chHead_text_size">@dimen/common_head_text_size</item>
        <item name="chHead_textColor">@android:color/white</item>
        <item name="chHead_imgClickEffect">@drawable/common_head_btn_selector</item>
        <item name="chHead_textClickEffect">@drawable/common_head_btn_selector</item>

    </style>
    <style name="common_green_head_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="chHead_title_padding_left">@dimen/common_head_leftImgPadding</item>
        <item name="chHead_titleColor">@color/common_text_color</item>
        <item name="chHead_leftImgPadding">15dip</item>
        <item name="chHead_rightImgPadding">15dip</item>
        <item name="chHead_title_size">@dimen/common_head_title_size</item>
        <item name="chHead_text_size">@dimen/common_head_text_size</item>
        <item name="chHead_textColor">@android:color/white</item>
        <item name="chHead_imgClickEffect">@drawable/common_head_btn_selector</item>
        <item name="chHead_textClickEffect">@drawable/common_head_btn_selector</item>

    </style>

    <style name="common_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/common_line_color</item>
    </style>

    <style name="common_light_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/common_line_color</item>
    </style>
</resources>
