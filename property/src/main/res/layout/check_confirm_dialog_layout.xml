<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wo_decline_toast_head_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/check_confirm_dialog_layout_tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="confirm"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/check_confirm_dialog_layout_tv_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_confirm_dialog_layout_tv_title"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dp"
        android:text="Are you sure to submit"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:id="@+id/check_confirm_dialog_layout_v_h_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#c8c8c8" 
        android:visibility="gone"
        android:layout_below="@+id/check_confirm_dialog_layout_tv_content" 
        />

    <LinearLayout
        android:id="@+id/check_confirm_dialog_layout_panel_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_confirm_dialog_layout_v_h_line"
        >

        <Button
            android:id="@+id/check_confirm_dialog_layout_btn_cancel"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/common_white_item_click_selector"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="#2181F9" />

        <View
            android:id="@+id/check_confirm_dialog_layout_v_button_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#c8c8c8" />

        <Button
            android:id="@+id/check_confirm_dialog_layout_btn_yes"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/common_white_item_click_selector"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="#2181F9" />
    </LinearLayout>

    <View
        android:id="@+id/check_confirm_dialog_layout_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_above="@id/check_confirm_dialog_layout_panel_bottom_bar"
        android:layout_marginTop="10dp"
        android:background="#C8CBCC" />

</RelativeLayout>