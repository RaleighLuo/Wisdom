<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_white_item_click_selector"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_margin="10dip"
        android:src="@mipmap/portrait"
        android:id="@+id/message_comment_item_layout_iv_portrait"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张琳"
        android:id="@+id/message_comment_item_layout_tv_name"
        android:textSize="14sp"
        android:textColor="@color/blue_text_color"
        android:layout_alignTop="@+id/message_comment_item_layout_iv_portrait"
        android:layout_toRightOf="@+id/message_comment_item_layout_iv_portrait"
        />
    <FrameLayout
        android:id="@+id/message_comment_item_layout_ll_content"
        android:layout_toLeftOf="@+id/message_comment_item_layout_fl_right"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:layout_alignLeft="@+id/message_comment_item_layout_tv_name"
        android:layout_below="@+id/message_comment_item_layout_tv_name"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/message_comment_item_layout_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:textColor="@color/common_text_color"
            android:ellipsize="end"
            android:text="说起消防系统，报警器经常会莫名其妙的响起，联系保安，保安告诉我们开关在哪，关掉完事。"
            />
        <ImageView
            android:id="@+id/message_comment_item_layout_iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/like_grey"
            android:visibility="gone"
            android:tint="@color/orange_color"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/message_comment_item_layout_tv_date"
        android:layout_below="@+id/message_comment_item_layout_ll_content"
        android:layout_alignLeft="@+id/message_comment_item_layout_ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:textSize="10sp"
        android:textColor="@color/common_dark_gray_text_color"
        android:text="6月19日 19:30"
        />
    <FrameLayout
        android:id="@+id/message_comment_item_layout_fl_right"
        android:layout_width="60dip"
        android:layout_alignParentRight="true"
        android:layout_margin="10dip"
        android:layout_centerVertical="true"
        android:layout_height="60dip">
        <ImageView
            android:id="@+id/message_comment_item_layout_iv_topic_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_imageloading"
            />
        <TextView
            android:id="@+id/message_comment_item_layout_tv_topic_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="3"
            android:text="消防系统不怎么完善"
            android:padding="5dip"
            android:gravity="center_vertical"
            android:background="@color/common_bg_color"
            android:textColor="@color/common_light_text_color"
            android:textSize="12sp"
            />


    </FrameLayout>

</RelativeLayout>