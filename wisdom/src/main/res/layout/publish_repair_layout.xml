<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.starlight.mobile.android.lib.view.CusHeadView
        android:id="@+id/notice_layout_ch_head"
        style="@style/common_head_style"
        mAttr:chHead_leftImg="@mipmap/ic_back"
        mAttr:chHead_title="@string/repair"
        mAttr:chHead_title_padding_left="0dip" />
    <View style="@style/common_line_style"/>
    <ScrollView   android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <!--<TextView-->
                <!--android:id="@+id/publish_repair_layout_tv_belong_community"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="国际华城 八栋三单元1205"-->
                <!--android:clickable="true"-->
                <!--android:layout_gravity="center"-->
                <!--android:textSize="12sp"-->
                <!--android:layout_marginTop="@dimen/margin"-->
                <!--android:layout_marginLeft="20dip"-->
                <!--android:layout_marginRight="20dip"-->
                <!--android:onClick="onClickListener"-->
                <!--android:textColor="@color/blue_text_color"-->
                <!--android:layout_marginBottom="10dip"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repair_type"
                android:textSize="12sp"
                android:layout_marginTop="15dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:textColor="@color/common_light_text_color"
                />
            <TextView
                android:id="@+id/publish_repair_layout_tv_repair_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电梯故障"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:clickable="true"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:background="@drawable/common_item_click_selector"
                android:onClick="onClickListener"
                android:textColor="@color/common_text_color"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                />
            <EditText
                android:id="@+id/publish_repair_layout_et_content"
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@android:color/white"
                android:elevation="8dip"
                android:hint="@string/please_describe_question"
                android:gravity="top"
                android:padding="10dip"
                android:textSize="14sp"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/publish_repair_layout_recycleview"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_height="wrap_content"/>
                <!--android:tint="@android:color/white"图片渲染成白色-->
                <ImageView
                    android:id="@+id/publish_repair_layout_iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/topic_add"
                    android:padding="10dip"
                    android:onClick="onClickListener"
                    android:scaleType="centerInside"
                    android:tint="@android:color/white"
                    android:background="@drawable/black_oval_selector"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/publish_repair_layout_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/commit"
        android:layout_marginTop="10dip"
        android:textColor="@android:color/white"
        android:layout_weight="0"
        android:background="@drawable/common_btn_selector"
        />
</LinearLayout>
