<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@drawable/common_item_click_selector"
    >
    <!--<View style="@style/common_light_line_style"-->
        <!--android:layout_height="0.1dip"-->
        <!--android:id="@+id/topic_item_layout_v_top_line"-->
        <!--/>-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/topic_item_layout_iv_portrait"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:src="@mipmap/topic_portrait"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YYL666"
        android:layout_marginRight="@dimen/margin"
        android:textSize="16sp"
        android:layout_marginTop="1dip"
        android:textColor="@color/blue_text_color"
        android:layout_alignTop="@+id/topic_item_layout_iv_portrait"
        android:layout_toRightOf="@+id/topic_item_layout_iv_portrait"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginBottom="1dip"
        android:layout_alignBottom="@+id/topic_item_layout_iv_portrait"
        android:layout_alignLeft="@+id/topic_item_layout_tv_name"
        android:textColor="@color/common_hint_text_color"
        android:text="6-19 08:07"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_text_color"
        android:text="求助解决？"
        android:layout_marginRight="@dimen/margin"
        android:textSize="13sp"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/topic_item_layout_iv_portrait"
        android:layout_alignLeft="@+id/topic_item_layout_iv_portrait"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:paddingTop="5dip"
        android:layout_marginRight="@dimen/margin"
        android:layout_alignLeft="@+id/topic_item_layout_tv_content"
        android:id="@+id/topic_item_layout_rv_image"
        android:layout_below="@+id/topic_item_layout_tv_content"
        />
    <View
        android:id="@+id/topic_item_layout_v_content_line"
        style="@style/common_light_line_style"
        android:background="@color/common_bg_color"
        android:layout_marginTop="10dip"
        android:layout_marginRight="@dimen/margin"
        android:layout_alignLeft="@+id/topic_item_layout_tv_content"
        android:layout_below="@+id/topic_item_layout_rv_image"
        />
    <LinearLayout
        android:id="@+id/topic_item_layout_ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/topic_item_layout_v_content_line"
        >
        <FrameLayout
            android:id="@+id/topic_item_layout_fl_comment"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:background="@drawable/common_item_click_selector"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/topic_item_layout_tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_gravity="center"
                android:drawablePadding="5dip"
                android:drawableLeft="@mipmap/comment_grey"
                android:textSize="12sp"
                android:textColor="@color/common_gray_title_color"
                android:layout_marginLeft="5dip"
                />
        </FrameLayout>
        <View android:layout_height="match_parent"
            android:layout_width="0.1dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:background="@color/common_line_color"
            />
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:paddingTop="10dip"
            android:id="@+id/topic_item_layout_fl_like"
            android:paddingBottom="10dip"
            android:background="@drawable/common_item_click_selector"
            android:layout_height="wrap_content">
            <com.starlight.mobile.android.lib.view.RadioButtonPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/like_check_text_color"
                android:textSize="12sp"
                android:button="@null"
                android:layout_gravity="center"
                mAttr:radio_left_height="12dip"
                mAttr:radio_left_width="13dip"
                android:drawablePadding="5dip"
                android:layout_marginRight="5dip"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/like_check_selector"
                android:id="@+id/topic_item_layout_rb_like"
                android:layout_alignBaseline="@+id/topic_item_layout_tv_comment"
                android:layout_alignBottom="@+id/topic_item_layout_tv_comment"
                />
        </FrameLayout>
    </LinearLayout>

    <View style="@style/common_light_line_style"
        android:layout_height="0.1dip"
        android:elevation="3dip"
        android:layout_below="@+id/topic_item_layout_ll_comment"
        />
</RelativeLayout>