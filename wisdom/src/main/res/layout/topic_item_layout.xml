<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/common_item_click_selector"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/topic_item_layout_iv_portrait"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="10dip"
        android:src="@mipmap/topic_portrait"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YYL666"
        android:layout_marginRight="@dimen/margin"
        android:textSize="14sp"
        android:textColor="@color/blue_text_color"
        android:layout_alignTop="@+id/topic_item_layout_iv_portrait"
        android:layout_toRightOf="@+id/topic_item_layout_iv_portrait"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignLeft="@+id/topic_item_layout_tv_name"
        android:layout_below="@+id/topic_item_layout_tv_name"
        android:textColor="@color/common_hint_text_color"
        android:text="6-19 08:07"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_text_color"
        android:text="求助解决？"
        android:layout_marginRight="@dimen/margin"
        android:textSize="13sp"
        android:layout_marginTop="2dip"
        android:layout_below="@+id/topic_item_layout_tv_date"
        android:layout_alignLeft="@+id/topic_item_layout_tv_name"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="5dip"
        android:layout_marginRight="@dimen/margin"
        android:layout_alignLeft="@+id/topic_item_layout_tv_name"
        android:id="@+id/topic_item_layout_rv_image"
        android:layout_below="@+id/topic_item_layout_tv_content"
        />
    <ImageView
        android:id="@+id/topic_item_layout_iv_comment"
        android:layout_width="14dip"
        android:layout_height="13dip"
        android:src="@drawable/comment_btn_selector"
        android:layout_alignLeft="@+id/topic_item_layout_tv_name"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/topic_item_layout_rv_image"
        />
    <TextView
        android:id="@+id/topic_item_layout_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/topic_item_layout_iv_comment"
        android:text="6"
        android:textSize="12sp"
        android:textColor="@color/common_light_text_color"
        android:layout_marginLeft="5dip"
        android:layout_alignTop="@+id/topic_item_layout_iv_comment"
        />
    <com.starlight.mobile.android.lib.view.RadioButtonPlus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/like_check_text_color"
        android:textSize="12sp"
        android:paddingTop="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:button="@null"
        mAttr:radio_left_height="12dip"
        mAttr:radio_left_width="13dip"
        android:drawablePadding="5dip"
        android:layout_marginRight="5dip"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/like_check_selector"
        android:id="@+id/topic_item_layout_rb_like"
        android:layout_alignBaseline="@+id/topic_item_layout_tv_comment"
        android:layout_alignBottom="@+id/topic_item_layout_tv_comment"
         />

    <View
        style="@style/common_light_line_style"
        android:layout_marginTop="7dip"
        android:layout_alignLeft="@+id/topic_item_layout_tv_name"
        android:layout_below="@+id/topic_item_layout_iv_comment"
        />
</RelativeLayout>