<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_white_item_click_selector"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红的细节"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:id="@+id/change_community_item_layout_tv_title"
        android:textColor="@color/common_light_text_color"
        />
    <TextView
        android:id="@+id/change_community_item_layout_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0382098928342"
        android:textColor="@color/common_dark_gray_text_color"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/change_community_item_layout_tv_title"
        android:layout_alignLeft="@+id/change_community_item_layout_tv_title"
        />
    <CheckBox
        android:id="@+id/change_community_item_layout_cb_check"
        android:layout_width="25dip"
        android:background="@drawable/album_checkbox_selector"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:button="@null"
        android:layout_centerVertical="true"
        android:layout_height="25dip" />
    <View style="@style/common_light_line_style"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="@dimen/margin"
        android:layout_below="@+id/change_community_item_layout_tv_content"
        />

</RelativeLayout>